<UserControl
    x:Class="FormsToolkit.UWP.Views.NativeRecyclerListView"
    x:Name="NativeListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:FormsToolkit.UWP.Views">

    <ListView x:Name="EmbeddedList" x:FieldModifier="public" Margin="-12, 0, -12, 0" Background="BlueViolet">
        <ListView.ItemTemplate>
            <DataTemplate>
                <views:FormsBoundTemplate NativeRecyclerListView="{Binding ElementName=NativeListView}" BindingContext="{Binding }" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
</UserControl>
